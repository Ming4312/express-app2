extends layout

block javascripts
    script(src="/modules/jquery-validation/dist/jquery.validate.js")
    script(src="/javascripts/register.js")
block content
    div.row
        div.col
            h1.page-header
                | Register
    div.row
        div.col
            form(action="/users/register", method="POST", id="registerForm")
                div.form-group
                    label(for="username")
                        | Username:
                    input(type="text", class="form-control", id="username", name="username", required="true")
                div.form-group
                    label(for="password")
                        | Password:
                    input(type="password", class="form-control", id="password", name="password", placeholder="Password", required="true")
                div.form-group
                    label(for="passwordConfirm")
                        | Re-entry your password:
                    input(type="password", class="form-control", id="passwordConfirm", name="passwordConfirm", placeholder="Confirm", required= "true")
                button(type="submit", class="btn btn-default")
                    | Submit
                    