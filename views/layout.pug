doctype html
html
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1.0")
    title= title
    //base(href="express/")
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/modules/bootstrap/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/metisMenu/metisMenu.min.css')
    link(rel='stylesheet', href='/stylesheets/dist/css/sb-admin-2.css')
    link(rel='stylesheet', href='/stylesheets/morrisjs/morris.css')
    link(rel='stylesheet', href='/stylesheets/font-awesome/css/font-awesome.min.css')
    block stylesheets

      
    
    script(src="/modules/jquery/dist/jquery.min.js")
    script(src="/modules/moment/min/moment.min.js")
    script(src="/modules/bootstrap/dist/js/bootstrap.min.js")
      
    script(src="/javascripts/metisMenu/metisMenu.min.js")
    script(src="/javascripts/dist/js/sb-admin-2.js")
    block javascripts
    
    
    
  body
    div(id="wrapper")
      nav(class="navbar navbar-default navbar-static-top", role="navigation", style="margin-bottom: 0")
        div.navbar-header
          button(type="button", class="navbar-toggle", data-toggle="collapse", data-target=".navbar-collapse")
            span.sr-only
              | Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a(class="navbar-brand", href="/")
           | Admin
        div(class="navbar-default sidebar", role="navigation")
          div(class="sidebar-nav navbar-collapse collpase")
            ul(class="nav", id="side-menu")
              li
                a(href="/")
                  i(class="fa fa-dashboard fa-fw")
                  | Dashboard
              li
                a(href="#")
                  i(class="fa fa-bar-chart-o fa-fw")
                  | Trading Record
                  span(class="fa arrow")
                ul(class="nav nav-second-level")
                  li
                    a(href="#") Manage
                  li
                    a(href="viewAll") View
              if isLogin
                li
                  a(href="/calendar")
                    i(class="fa fa-calendar fa-fw")
                    | Calendar
              li
                a(href="#")
                  i(class="fa fa-user fa-fw")
                  | Account
                  span(class="fa arrow")
                ul(class="nav nav-second-level")
                  if isLogin
                    li
                      a(href="#")
                        i(class="fa fa-user fa-fw")
                        | User Profile
                    li
                      a(href="#")
                        i(class="fa fa-gear fa-fw")
                        | Settings
                    li
                      a(href="/users/logout")
                        i(class="fa fa-sign-out fa-fw")
                        | Logout
                  else
                    li
                      a(href="/users/register")
                        i(class="fa fa-sign-out fa-fw")
                        | SignUp
                    li
                      a(href="/users/login")
                        i(class="fa fa-sign-out fa-fw")
                        | Login
      div(id="page-wrapper")
        block content
