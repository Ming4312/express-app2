extends layout
block stylesheets
    link(href="stylesheets/datatables-plugins/dataTables.bootstrap.css", rel="stylesheet")
    link(href="stylesheets/datatables-responsive/dataTables.responsive.css", rel="stylesheet")
    
block javascripts
    script(src="javascripts/datatables/js/jquery.dataTables.min.js")
    script(src="javascripts/datatables-plugins/dataTables.bootstrap.min.js")
    script(src="javascripts/datatables-responsive/dataTables.responsive.js")
    script(src="javascripts/main.js")

    
block content
    div.row
        div.col
            h1.page-header
                | Tables
    div.row
        div.col
            div.panel.panel-default
                div.panel-heading
                    | DataTable
                div.panel-body
                    div.btn-group
                        button(type="button", class="btn btn-info", data-toggle="modal", data-target="#commonModal", id="addButton") Add
                        button(type="button", class="btn btn-info", data-toggle="modal", data-target="#commonModal", id="updateButton") Edit
                        button(type="button", class="btn btn-info", id="deleteButton") Delete
                    table(width="100%",class="table table-striped table-bordered", id="testingTable")
                        thead
                            tr
                                th
                                    | id
                                th 
                                    | stock number
                                th 
                                    | buy
                                th 
                                    | sell
                                th
                                    | created date
                                th
                                    | updated date