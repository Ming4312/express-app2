mixin createModal(type, apipath)
    div(class="modal fade", id="commonModal", role="dialog")
        div.modal-dialog
            div.modal-content
                div.modal-header
                    button(type="button",class="close", data-dismiss="modal") &times;
                    h4.modal-title
                        | #{type}
                div.modal-body
                    form(action=apipath, method="POST", id="commonForm")
                        table
                            tr
                                td
                                    label= id
                                td
                                    #{id}
                            tr
                                td
                                    label= stock number
                                td
                                    #{stock_number}
                div.modal-footer
                    button(type="button",class="btn btn-default",onclick="getElementById('commonForm').submit()") Submit
                    button(type="button",class="btn btn-default",data-dismiss="modal") Close